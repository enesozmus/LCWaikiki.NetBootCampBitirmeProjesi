@model CreateProductViewModel
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["errormessage"] != null)
{
    <p style="color:red;">
        @TempData["errormessage"]?.ToString()
    </p>
}

<style>
    .form-control{
        border: 1px solid #0080ff;
    }
</style>

<div class="container my-4 pt-4">
    <div class="row">
        <div class="col-md-12">
            <form asp-controller="Products" asp-action="CreateProduct" enctype="multipart/form-data">

                <h1 class="text-center">
                    <i class="fa-solid fa-circle-plus text-success"></i>
                    Ürün Ekleme Paneli
                    <i class="fa-solid fa-circle-plus text-success"></i>
                </h1>

                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Ürün Adı</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Ürün Fiyatı:</label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SizeId">Sizes</label>
                            <select asp-for="SizeId" asp-items="ViewBag.Sizes" class="form-control">
                                <option value="-1" disabled selected>Lütfen seçin...</option>
                            </select>
                            <span asp-validation-for="SizeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Ürün Adedi:</label>
                            <input type="number" asp-for="@Model.AmountOfStock" class="form-control" />
                            <span asp-validation-for="AmountOfStock" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CategoryId">Categories</label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                                <option value="-1" disabled selected>Lütfen seçin...</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BrandId">Brands</label>
                            <select asp-for="BrandId" asp-items="ViewBag.Brands" class="form-control">
                                <option value="-1" disabled selected>Lütfen seçin...</option>
                            </select>
                            <span asp-validation-for="BrandId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LifecycleId">Lifecycles</label>
                            <select asp-for="LifecycleId" asp-items="ViewBag.Lifecycles" class="form-control">
                                <option value="-1" disabled selected>Lütfen seçin...</option>
                            </select>
                            <span asp-validation-for="LifecycleId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ColorId">Colors</label>
                            <select asp-for="ColorId" asp-items="ViewBag.Colors" class="form-control">
                                <option value="-1" disabled selected>Lütfen seçin...</option>
                            </select>
                            <span asp-validation-for="ColorId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="checkbox" class="form-check-input" asp-for="@Model.IsOfferable">
                            <label class="form-check-label">Teklif verilebilir mi?</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Image" class="control-label"></label>
                            <div class="custom-file"> <input asp-for="Image" class="custom-file-input" id="Image" onchange="document.getElementById('ImagePrv').src = window.URL .createObjectURL(this.files[0])" /> <label class="custom-file-label" for="Image">Choose File</label> </div>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <button type="submit" class="btn btn-success btn-block mt-3">Ürünü Ekle</button>
            </form>
        </div>
    </div>
</div>


<script>     $(".select-add-placeholder").prepend("<option value=''>None</option>"); </script>
