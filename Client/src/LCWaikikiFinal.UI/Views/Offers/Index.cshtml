@model IReadOnlyList<GetOffersByUserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">
    <i class="fas fa-comment-dollar text-success">
    </i>
        Verilen Teklifler
        </h1>

<div class="container mt-4 pt-4">
    <table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col"> Kullanıcı ID</th>
            <th scope="col">Teklif Tarihi</th>
            <th scope="col">Teklif Giden Fiyat</th>
            <th scope="col">Teklif Giden Ürün</th>
            <th scope="col">Teklif ID</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.AppUserId</th>
                <td>@item.CreatedDate</td>
                <td>@item.OfferPrice</td>
                <td>@item.ProductName</td>
                <td>@item.Id</td>
                <td>
                        <a asp-action="Remove" asp-controller="Offers" asp-route-id="@item.Id" class="btn btn-danger btn-sm" >
                            <i class="fa-solid fa-circle-trash"></i>
                            Geri Çek </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>